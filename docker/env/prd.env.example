# Example production env

NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=replace-with-prod-anon-key
SUPABASE_SERVICE_ROLE_KEY=replace-with-prod-service-role-key
SUPABASE_SERVICE_ROLE_JWT_AUDIENCE=authenticated
# JWT expiration (seconds). 86400 = 24h
GOTRUE_JWT_EXP=86400

# Supabase Database (Postgres)
REMOTE_DATABASE_URL=postgresql://postgres:replace-with-password@db.supabase.co:5432/postgres?sslmode=require
SUPABASE_DB_URL=${REMOTE_DATABASE_URL}
PGSSLROOTCERT=/etc/ssl/certs/ca-certificates.crt  # pg_dump/psql ç”¨
PGSSLMODE=require

# Optional: stricter limits or flags for production
NEXT_PUBLIC_PERSONALIZE_TARGET=20
NEXT_PUBLIC_DIAGNOSIS_TARGET=30
NEXT_PUBLIC_GUEST_DECISIONS_LIMIT=20

FANZA_API_ID=your-dmm-api-id
FANZA_API_AFFILIATE_ID=yotadata2-990
FANZA_LINK_AFFILIATE_ID=yotadata2-001

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=
