## Copy to .env.remote (do not commit real secrets)

# Supabase (used by scripts)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
# Optional (use for privileged updates if RLS blocks anon):
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# FANZA / DMM affiliate
FANZA_API_ID=your-dmm-api-id

# Use yotadata2-990 for API calls (DMM affiliate param)
FANZA_API_AFFILIATE_ID=yotadata2-990

# Use yotadata2-001 for links (al.fanza wrapper)
FANZA_LINK_AFFILIATE_ID=yotadata2-001

# Optional legacy fallback variable (kept for backward compatibility)
